@using POSTest.ViewModels
@model List<ProductVm>
@{
    ViewData["Title"] = "Products";
}

<div class="page-header d-md-flex justify-content-between">
    <div>
        <h3>Users</h3>
        <nav aria-label="breadcrumb" class="d-flex align-items-start">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="index" asp-controller="products">Products list</a>
                </li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            @foreach (var product in Model)
            {
                if (product.Sizes.Count > 0)
                {
                    foreach (var productSize in product.Sizes)
                    {
                        <div class="col-md-4 col-xs-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="my-3">
                                        <a href="#" title="Vase">
                                            <img src="@product.PictureUrl"
                                     class="img-fluid rounded" alt="Vase">
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        <a href="#">
                                            <h4>@product.Name - @productSize.Name</h4>
                                        </a>
                                        <p>
                                            <span class="text-truncate">@productSize.Price BHD</span>
                                        </p>
                                        <div class="mt-2">
                                            <a asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@product.Id" class="btn btn-primary add-to-card">Add to Cart</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-md-4 col-xs-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="my-3">
                                        <a href="#" title="Vase">
                                            <img src="@product.PictureUrl"
                                     class="img-fluid rounded" alt="Vase">
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        <a href="#">
                                            <h4>@product.Name </h4>
                                        </a>
                                        <p>
                                            <span class="text-truncate">@product.Price BHD</span>
                                        </p>
                                        <div class="mt-2">
                                            <button class="btn btn-primary add-to-card">Add to Cart</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
            }


        </div>
    </div>
</div>